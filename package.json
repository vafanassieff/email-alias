{
  "name": "@vafanassieff/email-alias",
  "version": "0.1.3",
  "description": "Create a email alias to keep you real email hidden !",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:vafanassieff/email-alias.git"
  },
  "author": "Victor Afanassieff <victor@afanassieff.com>",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/vafanassieff/email-alias/issues"
  },
  "homepage": "https://github.com/vafanassieff/email-alias#readme",
  "keywords": [
    "email",
    "alias",
    "ovh",
    "cli",
    "tool",
    "redirection",
    "privacy"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "type": "module",
  "files": [
    "bin/**/*.js",
    "src/**/*.js"
  ],
  "imports": {
    "#src/*": "./src/*"
  },
  "bin": {
    "email-alias": "./bin/index.js"
  },
  "scripts": {
    "test": "exit 0",
    "prepare": "husky install",
    "eslint": "eslint --fix",
    "prettier": "prettier --write",
    "lint": "eslint '**/*.js'",
    "format": "prettier '**/*.js' --check"
  },
  "dependencies": {
    "commander": "9.2.0",
    "zx": "6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier",
      "eslint"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/**"
    ],
    "globals": {
      "question": true,
      "$": true,
      "fetch": true
    },
    "rules": {
      "jsdoc/require-jsdoc": [
        1,
        {
          "require": {
            "ArrowFunctionExpression": true,
            "ClassDeclaration": true,
            "ClassExpression": true,
            "FunctionDeclaration": true,
            "FunctionExpression": true,
            "MethodDefinition": true
          },
          "publicOnly": true,
          "enableFixer": false
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "#src/**",
              "group": "internal"
            }
          ]
        }
      ]
    },
    "settings": {
      "import/core-modules": [
        "node:process",
        "node:console",
        "node:os",
        "node:net",
        "node:crypto",
        "node:buffer",
        "node:timers",
        "node:querystring",
        "node:url",
        "node:path",
        "node:fs",
        "node:fs/promises",
        "node:timers/promises",
        "zx/globals",
        "node:stream/promises"
      ],
      "import/resolver": {
        "alias": {
          "map": [
            [
              "#src",
              "./src"
            ]
          ],
          "extensions": [
            ".js",
            ".json"
          ]
        }
      }
    }
  }
}
